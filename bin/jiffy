#!/usr/bin/env ruby

require 'optparse'
require 'jiffy'
require 'jiffy/version'

opts = OptionParser.new do |opts|
  opts.banner = "Usage: jiffy [options]Â [FILE]"
  opts.separator "Standard input is read when FILE is not present"
  opts.separator ""

  opts.on_tail("-h", "--help", "Show this message") do
    puts opts
    exit
  end

  opts.on_tail("-v", "--version", "Print the version number of format-json") do
    puts "jiffy #{Jiffy::VERSION}"
    exit
  end
end

opts.parse!

Signal.trap("INT") do
  puts "Aborted"
  exit 1
end

Signal.trap("TERM") do
  puts "Aborted"
  exit 1
end

begin
  if ARGV.empty?
    Jiffy.new(in: STDIN).format
  else
    Jiffy.new(in: ARGF).format
  end
rescue Jiffy::UnparseableError => e
  $stderr.puts e
  exit! 1
rescue Errno::EPIPE
  # Do nothing
end
